!!!
%html
  %head
    %title= @title || "A Saucy Book (Alpha)"
    = render :partial => "layouts/stylesheets"        
    = render :partial => "layouts/javascripts"
    = csrf_meta_tag
    = yield :head
    = yield :opengraph_meta_tags
  %body
    = fb_javascript_include_tag
    #header
      .container
        #user-nav
          - if current_user
            == Logged in as #{current_user.name}
            |
            = link_to "Log out", logout_path
          - else
            = login_link :text => "Log in with Facebook"
        %h1#logo= @title || "A Saucy Book (Alpha)"    
          
    #body
      .container
        #flash.span-24{:style => "display:none; position: absolute"}
          -flash.each do |type, value|
            .flash{ :class => type.to_s }
              = value
    
        = yield 
        
    :javascript
      $(function() {
         $('#flash').delay(500).fadeIn('normal', function() {
            $(this).delay(2500).fadeOut('slow');
         });
      });   
