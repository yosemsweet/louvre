- content_for(:opengraph_meta_tags, opengraph_meta_tags_for(:url => canvas_page_url(@page.canvas, @page)))
- content_for :head do
  = stylesheet_link_tag 'homepage.css', :media => 'screen, projection'

.span-14
  %iframe#intro-video{:width => "540", :height => "349", :src => "http://www.youtube.com/embed/S__-wDm2vNY", :frameborder=>"0", :allowfullscreen => true}
.span-10.last
  .box.clearfix
    %p 
      A Saucy Book empowers communities to bring together information from all across the web to create comprehensive, lasting bodies of knowledge.
    -if current_user
      %h2 Create a New Canvas
      %form.inline{:action => "#{new_canvas_path}"}
        %input#canvas_name.title{:type => "text", :placeholder => "Canvas Name", :name => "canvas_name"}
        %input#submit{:type => "submit", :value => "Get Saucy!"}
    -else
      %h2 Get Started
      %a#login{:href=>"/auth/facebook"}
        %img{:src=>"http://plancast.com/images/facebook/login-button.png"}

 
  
:javascript
  $(function(){
    
    mpq.push(["track","hit_homepage"]);
    mpq.push(["track_forms",$("form"),"click_create_canvas"]);
    
    $("#login").click(function(){
      mpq.push(["track","click_login"]);
    });
    
  })
  


  