%li.widget.editable_widget{:data => {:widget_id => widget.id} , :class => widget.content_type}

  .body
    .title
    .toolbox
      = render_widget_section("delete_link")
      = render_widget_section("edit_link")
    .content
      = render_widget_section("content", widget)
    .edit_content
      = render_widget_section("inline_form", widget)
      
  -# .tags
  -#   = render_widget_section("tags", widget)  
    
:javascript
  $(".editable_widget").hover( function(){$(this).find('.toolbox').show();},function(){$(this).find('.toolbox').hide();});
  