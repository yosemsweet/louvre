= form_for @widget do |f|
  -if @widget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@widget.errors.count, "error")} prohibited this widget from being saved:"
      %ul
        - @widget.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :page_id
    = f.text_field :page_id
  .field
    = f.label :canvas_id
    = f.text_field :canvas_id
  .field
    = f.label :creator_id
    = f.text_field :creator_id
  .field
    = f.label :content_id
    = f.text_field :content_id
  .field
    = f.label :content_type
    = f.text_field :content_type
  .actions
    = f.submit 'Save'
