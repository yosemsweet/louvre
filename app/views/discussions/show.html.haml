- width = params[:width]||600
.fb-discussion
  %h2
    Discussions
  = comments_for(@canvas, :href => canvas_url(@canvas), :width => width)

:javascript
  FB.XFBML.parse();

  FB.Event.subscribe('comment.create',
      function(response) {
          mpq.push(["track","comment_added", {'type':"facebook", "canvas":"#{@canvas.id}","user": "#{current_user}"}]);
      }
  );
  
  FB.Event.subscribe('comment.remove',
      function(response) {
          mpq.push(["track","comment_removed" , {'type' : "facebook", 'canvas' : "#{@canvas.id}", "user":"#{current_user}"}]);
      }
  );
  