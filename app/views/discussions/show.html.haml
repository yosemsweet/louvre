- width = params[:width]||600
.fb-discussion
  %h2
    Discussions
  = comments_for(@canvas, :href => canvas_url(@canvas), :width => width)

:javascript
  FB.XFBML.parse();
  
  FB.Event.subscribe('comment.create',
      function(response) {
          mpq.push(["track","comment_facebook_added_#{@canvas.id}"]);
      }
  );
  
  FB.Event.subscribe('comment.remove',
      function(response) {
          mpq.push(["track","comment_facebook_removed_#{@canvas.id}"]);
      }
  );
  