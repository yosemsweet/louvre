= form_for @canvas do |f|
  -if @canvas.errors.any?
    #error_explanation
      %h2= "#{pluralize(@canvas.errors.count, "error")} prohibited this canvas from being saved:"
      %ul
        - @canvas.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :mission
    = f.text_area :mission
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :open?
    = f.check_box :open?
  .actions
    = f.submit 'Save'
