#canvas_header
  .content
    %h1#canvas_name_text
      - if request.path != canvas_path(@canvas)
        = link_to @canvas.name, @canvas
      - else
        = @canvas.name
    
    = join_link_for @canvas, current_user || nil
        
    - if can?(:update, @canvas)
      = link_to image_tag("setting-24.png", :width => 24, :height => 24, :alt => "Community settings"), edit_canvas_path(@canvas), :id => "canvas-settings", :class => "settings"
      -# = hint_for(@canvas, @current_user, "canvas")

    .mini_dashboard  
      - if can?(:update, @canvas)
        Creator:
        = @canvas.creator
      - if can?(:update, @canvas)
        |
        = link_to @canvas.members.length.to_s + ' Members', members_canvas_path(@canvas)
      - if can?(:update, CanvasApplicant.new(:canvas_id => @canvas.id))
        |
        = link_to @canvas.applicants.length.to_s + ' Applicants', applicants_canvas_path(@canvas)

    
    %div{:id => "canvas-settings-hint", :style => "display: none"}
      .hinty
        .get-started
          .heading
            Want to change your community name?
          .content
            Check out the community settings by clicking on this icon.

:javascript
  
  $("#canvas-settings").qtip({
    content: $("#canvas-settings-hint").html(),
    show: 'mouseover',
    hide: 'mouseout',
    show: { delay: 0 },
    position: {
      corner: { 
        target: 'bottomLeft', 
        tooltip: 'topRight'
      },
      adjust: { screen: true }
    },
    style: {
      width: 572,
      border: {
        width: 5,
        radius: 10
      },
      padding: 10, 
      tip: true,
      name: 'light' 
    }
  });
