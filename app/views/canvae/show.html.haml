= render :partial => "header"
%p#notice= notice

%p
  %b Name:
  = @canvas.name
  = @canvas.id

%p
  %b Mission:
  = @canvas.mission
%p
  %b Image url:
  = @canvas.image_url
%p
  %b Creator:
  = @canvas.creator_id
%p#input-stream
  %h2
    Input Stream:

  - @canvas.widgets.each do |widget|
    .widget
      .id= widget.id
      .content= widget.content
      .creator= widget.creator.to_s

  = link_to "New Widget", new_canvas_widget_path(@canvas)

  %h2
    Pages
  %ul
  - @canvas.pages.each do |page|
    %li
      = link_to page.title, canvas_page_path(@canvas, page)

  - if current_user
    .bookmarklet
      Install Bookmarklet

    %p
      ="drag the box below to your bookmark toolbar. #{host_uri}"
    %a#bookmarklet_install{:onmousedown=>"mpq.push(['track','install_bookmark']);",:href => "javascript:(function(){_my_var=document.createElement('SCRIPT');_my_var.type='text/javascript';_my_var.innerText='canvas_id=#{@canvas.id};user_id=#{current_user.id}';_my_script=document.createElement('SCRIPT');_my_script.type='text/javascript';_my_script.src='#{host_uri}/javascripts/post-link.js';element=document.getElementsByTagName('body')[0];element.appendChild(_my_var);element.appendChild(_my_script);})();"}
      .info
        = "add to #{@canvas.name}"
  .info
    #see_video
      %button{:onclick => "$('#instructions').removeClass('hide');$('#see_video').addClass('hide');"}
        Click here
      see video on how to install bookmarklet for your canvas
    #instructions.hide
      %iframe{:width=>"425", :height=>"349", :src=>"http://www.youtube.com/embed/QrwevUN0KdQ"} 
%p 
  = link_to 'Create Page', new_canvas_page_path(@canvas)

= link_to 'Edit', edit_canvas_path(@canvas)
\|
= link_to 'Back', canvae_path

:javascript
  $(function(){
    mpq.push(["track","hit_canvas_homepage"]);
    window.mixpanelobject=mpq;  
  })

