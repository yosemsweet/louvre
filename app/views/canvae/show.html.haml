= render :partial => "header"
%p#notice= notice

%p
  %b Name:
  = @canvas.name
  = @canvas.id

%p
  %b Mission:
  = @canvas.mission
%p
  %b Image url:
  = @canvas.image_url
%p
  %b Creator:
  = @canvas.creator_id
%h2
  Input Stream:

- @canvas.things.each do |thing|
  .things
    = thing.id
    = thing.content
    = thing.creator_id
    .comments
      = render thing.comments

= link_to "New Thing", new_canvas_thing_path(@canvas)

%h2
  Pages
  %ul  
    - @canvas.pages.each do |page|
      %li
        = link_to page.title, canvas_page_path(@canvas,page.id)
- if current_user
  .bookmarklet
    Install Bookmarklet
  
  
  %a{:href => "javascript:(function(){_my_var=document.createElement('SCRIPT');_my_var.type='text/javascript';_my_var.innerText='canvas_id=#{@canvas.id};user_id=#{current_user.id}';_my_script=document.createElement('SCRIPT');_my_script.type='text/javascript';_my_script.src='http://localhost:3000/javascripts/post-link.js';element=document.getElementsByTagName('body')[0];element.appendChild(_my_var);element.appendChild(_my_script);})();"}
    .info
      drag this box to your bookmark toolbar
    
    
  .info
    #see_video
      %button{:onclick => "$('#instructions').removeClass('hide');$('#see_video').addClass('hide');"}
        Click here
      see video on how to install bookmarklet for your canvas
    #instructions.hide
      %iframe{:width=>"425", :height=>"349", :src=>"http://www.youtube.com/embed/QrwevUN0KdQ"} 
      
  
%p 
  = link_to 'Create Page', new_canvas_page_path(@canvas)

= link_to 'Edit', edit_canvas_path(@canvas)
\|
= link_to 'Back', canvae_path

